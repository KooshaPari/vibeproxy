<Window x:Class="VibeProxy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VibeProxy">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Padding="24,16" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
            <TextBlock Text="VibeProxy" FontSize="28" FontWeight="SemiBold"/>
            <TextBlock Text="AI Gateway Proxy" FontSize="14" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" Padding="24,16">
            <StackPanel Spacing="16">
                <!-- Server Status Card -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8" Padding="16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                            <Ellipse x:Name="StatusIndicator" Width="12" Height="12"
                                     Fill="Red" VerticalAlignment="Center"/>
                            <StackPanel>
                                <TextBlock Text="Server Status" FontWeight="SemiBold"/>
                                <TextBlock x:Name="StatusText" Text="Stopped"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                            <Button x:Name="StartServerButton" Content="Start" Click="StartServer_Click"/>
                            <Button x:Name="StopServerButton" Content="Stop" Click="StopServer_Click" IsEnabled="False"/>
                            <Button x:Name="RestartServerButton" Content="Restart" Click="RestartServer_Click" IsEnabled="False"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Backend Health Card -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8" Padding="16">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Backend Connection" FontWeight="SemiBold"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="http://localhost:8317"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Grid.Column="1" x:Name="BackendLatency" Text="--ms"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- SLM Status Card -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8" Padding="16">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Local SLM" FontWeight="SemiBold"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="http://localhost:8318"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <TextBlock Grid.Column="1" x:Name="SLMLatency" Text="--ms"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Content Frame for navigation -->
                <Frame x:Name="ContentFrame"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                Padding="24,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Â© 2025 Automaze, Ltd."
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Button Content="Rules Editor" Click="ShowRulesEditor_Click"/>
                    <Button Content="Settings" Click="Settings_Click"/>
                    <Button Content="Quit" Click="Quit_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
