<Window x:Class="VibeProxy.VisualRulesEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Visual Rules Editor"
        Width="1000"
        Height="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Palette -->
        <Border Grid.Column="0" 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,0,1,0">
            <ScrollViewer>
                <StackPanel Padding="16" Spacing="8">
                    <TextBlock Text="Node Palette" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,8"/>
                    
                    <Button Content="Condition" 
                            Style="{ThemeResource AccentButtonStyle}"
                            Click="AddConditionNode_Click"/>
                    <Button Content="Action" 
                            Click="AddActionNode_Click"/>
                    <Button Content="Router" 
                            Click="AddRouterNode_Click"/>
                    <Button Content="Filter" 
                            Click="AddFilterNode_Click"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Canvas -->
        <Grid Grid.Column="1">
            <Canvas x:Name="RulesCanvas" 
                    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                <!-- Nodes will be added here programmatically -->
            </Canvas>

            <!-- Zoom controls -->
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right" 
                       VerticalAlignment="Bottom"
                       Margin="16"
                       Spacing="8">
                <Button Content="âˆ’" Click="ZoomOut_Click" Width="40"/>
                <TextBlock x:Name="ZoomLevel" Text="100%" VerticalAlignment="Center"/>
                <Button Content="+" Click="ZoomIn_Click" Width="40"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
